<% include ../layout/header.ejs %>

<div class="container-fluid">
    <form class="form-horizontal" method="post">
        <fieldset>
            <div class="control-group">
                <label class="control-label" for="username">用户名</label>

                <div class="controls">
                    <input type="text" class="input-lg" id="username" name="username">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="password">密码</label>

                <div class="controls">
                    <input type="password" class="input-lg" id="password" name="password">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="password">确认密码</label>

                <div class="controls">
                    <input type="password" class="input-lg" id="password-repeat" name="password-repeat">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="email">邮箱</label>

                <div class="controls">
                    <input type="email" class="input-lg" id="email" name="email">
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">注册</button>
            </div>
        </fieldset>
    </form>

</div>

<% include ../layout/footer.ejs %>